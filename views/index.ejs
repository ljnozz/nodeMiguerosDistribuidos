<html>
<head>
  <title>Hormiguero</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="/javascripts/angularApp.js"></script>
  <style> .glyphicon-thumbs-up { cursor:pointer } </style>

  <style type="text/css">
   body { background: gray !important; } /* Adding !important forces the browser to overwrite the default style applied by Bootstrap */
</style>
</head>

<body ng-app="flapperNews" ng-controller="MainCtrl">



  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="page-header">
        <h1>Hormiga Reina</h1>
      </div>




      <div ng-repeat="post in posts " class="col-md-12">

    

        <span class="glyphicon glyphicon-thumbs-up"
            ng-click="incrementUpvotes(post)"></span>
          {{post.cantDeLagartoSinHueso}}
          <span style="font-size:20px; margin-left:10px;">
            <a ng-show="post.cantDeLagartoSinHueso" href="{{post.cantDeLagartoSinHueso}}">
              {{post.lagartoSinHueso}}
            </a>
            <span ng-hide="post.cantDeLagartoSinHueso">
              {{post.lagartoSinHueso}}
            </span>
          </span>

    
       
      </div>

      <form ng-submit="addPost()"
        style="margin-top:30px;">
        <h3>Agrega un nuevo pedido</h3>
        <br>
        <h4>Lagarto sin hueso</h4>
        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Cantidad de Lagarto sin Hueso"
          ng-model="cantDeLagartoSinHueso"></input>
        </div>

        <h4>Yuca</h4>
        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Cantidad de Yuca"
          ng-model="cantYuca"></input>
        </div>

        <h4>Cambur</h4>
        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Cantidad de Cambur"
          ng-model="cantCambur"></input>
        </div>
        <button type="submit" class="btn btn-primary">Enviar Pedido</button>
      </form>

    </div>
  </div>

  <img class="img-responsive" src="../views/hormiguita.gif" alt="Chania">
</body>
</html>